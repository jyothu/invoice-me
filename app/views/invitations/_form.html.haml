= form_for [@business, @invitation], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :business, :class => 'control-label'
    .controls
      = f.select :business_id, options_from_collection_for_select(@businesses, :id, :name, @business.id), {}, :required => :required

  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.email_field :email, :class => 'text_field', :required => true
  
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), businesses_path, :class => 'btn'
