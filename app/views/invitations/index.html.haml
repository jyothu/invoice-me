- model_class = Invitation
.page-header
  %h4=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:business_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @invitations.each do |invitation|
      %tr
        %td= link_to invitation.id, invitation_path(invitation)
        %td= invitation.name
        %td= invitation.email
        %td= invitation.business_id
        %td=l invitation.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_invitation_path(invitation), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), invitation_path(invitation), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_invitation_path, :class => 'btn btn-primary'
