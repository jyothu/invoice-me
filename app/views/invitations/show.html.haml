- model_class = Invitation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @invitation.name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @invitation.email
%p
  %strong= model_class.human_attribute_name(:business) + ':'
  %br
  = @invitation.business.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), businesses_path, :class => 'btn'
 
  = link_to t('.destroy', :default => t("helpers.links.destroy")), invitation_path(@invitation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
