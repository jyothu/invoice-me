- if @business.errors.any?
  .alert.alert-error
    %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
    - @business.errors.full_messages.each do |error|
      %li= error
= form_for @business, :html => { :class => 'form-horizontal', :multipart => true } do |f|
  .control-group
    = f.label :logo, :class => 'control-label'
    .controls
      = f.file_field :logo, :class => 'text_field'
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
      = f.hidden_field :owner_id, :value => current_user.id, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_field'
 
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), businesses_path, :class => 'btn'
